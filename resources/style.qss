QWidget {
    background-color: #1e1e1e;
    color: #ffffff;
    font-family: "Segoe UI", sans-serif;
    font-size: 13px;
}

QPushButton {
    background: transparent;
    border: none;
    padding: 6px;
}

QSlider::groove:horizontal {
    height: 4px;
    background: #333;
}
QSlider::handle:horizontal {
    background: white;
    width: 10px;
    margin: -5px 0;
    border-radius: 4px;
}
